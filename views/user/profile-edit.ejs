<div>
    <h3><%= customer.firstName %> <%= customer.lastName %></h3>
    <form id="client-create" action="<%= title.includes("Update") ? `/${customer._id}/profile-edit` : "/clients/create" %>" method="post">
      <div class="form-group">
        <label for="client-name">Name:</label>
        <input
          class="form-control"
          type="text"
          id="client-name"
          name="firstName"
          required
          value="<%= customer.firstName !== undefined ? customer.firstName : '' %>"
        />
      </div>
      <div class="form-group">
        <label for="client-name">Name:</label>
        <input
          class="form-control"
          type="text"
          id="client-lname"
          name="lastName"
          required
          value="<%= customer.lastName !== undefined ? customer.lastName : '' %>"
        />
      </div>
