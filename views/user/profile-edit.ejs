      <div class="form-group">
        <label for="client-email">Email:</label>
        <input
          class="form-control"
          type="email"
          id="client-email"
          name="clientEmail"
          required
          value="<%= customer.username !== undefined ? customer.username : '' %>"
        />
      </div>
    
      <button class="btn btn-primary" type="submit" value="Submit">
        <%= title.includes("Update") ? "Update" : "Create" %>
      </button>
    </form>
  </div>
  <% if (message) { %>
    <p><%= message %></p>
  <% } %>
  